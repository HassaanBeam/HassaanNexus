{
  "service_name": "HubSpot",
  "service_slug": "hubspot",
  "base_url": "https://api.hubapi.com",
  "auth_type": "bearer",
  "env_key": "HUBSPOT_ACCESS_TOKEN",
  "api_docs_url": "https://developers.hubspot.com/docs/api-reference/overview",
  "rate_limits": {
    "burst": "100 requests per 10 seconds",
    "daily": "500,000 requests per app per day"
  },
  "endpoints": [
    {
      "name": "List Contacts",
      "slug": "list-contacts",
      "method": "GET",
      "path": "/crm/v3/objects/contacts",
      "description": "Retrieve all contacts with pagination",
      "category": "contacts",
      "triggers": ["list contacts", "get contacts", "show contacts"]
    },
    {
      "name": "Create Contact",
      "slug": "create-contact",
      "method": "POST",
      "path": "/crm/v3/objects/contacts",
      "description": "Create a new contact",
      "category": "contacts",
      "triggers": ["create contact", "add contact", "new contact"]
    },
    {
      "name": "Update Contact",
      "slug": "update-contact",
      "method": "PATCH",
      "path": "/crm/v3/objects/contacts/{contactId}",
      "description": "Update an existing contact",
      "category": "contacts",
      "triggers": ["update contact", "edit contact", "modify contact"]
    },
    {
      "name": "Search Contacts",
      "slug": "search-contacts",
      "method": "POST",
      "path": "/crm/v3/objects/contacts/search",
      "description": "Search contacts by properties",
      "category": "contacts",
      "triggers": ["search contacts", "find contact", "lookup contact"]
    },
    {
      "name": "List Companies",
      "slug": "list-companies",
      "method": "GET",
      "path": "/crm/v3/objects/companies",
      "description": "Retrieve all companies with pagination",
      "category": "companies",
      "triggers": ["list companies", "get companies", "show companies"]
    },
    {
      "name": "Create Company",
      "slug": "create-company",
      "method": "POST",
      "path": "/crm/v3/objects/companies",
      "description": "Create a new company",
      "category": "companies",
      "triggers": ["create company", "add company", "new company"]
    },
    {
      "name": "Search Companies",
      "slug": "search-companies",
      "method": "POST",
      "path": "/crm/v3/objects/companies/search",
      "description": "Search companies by properties",
      "category": "companies",
      "triggers": ["search companies", "find company", "lookup company"]
    },
    {
      "name": "List Deals",
      "slug": "list-deals",
      "method": "GET",
      "path": "/crm/v3/objects/deals",
      "description": "Retrieve all deals with pagination",
      "category": "deals",
      "triggers": ["list deals", "get deals", "show deals", "pipeline"]
    },
    {
      "name": "Create Deal",
      "slug": "create-deal",
      "method": "POST",
      "path": "/crm/v3/objects/deals",
      "description": "Create a new deal",
      "category": "deals",
      "triggers": ["create deal", "add deal", "new deal", "new opportunity"]
    },
    {
      "name": "Update Deal",
      "slug": "update-deal",
      "method": "PATCH",
      "path": "/crm/v3/objects/deals/{dealId}",
      "description": "Update an existing deal",
      "category": "deals",
      "triggers": ["update deal", "edit deal", "modify deal", "change deal stage"]
    },
    {
      "name": "Search Deals",
      "slug": "search-deals",
